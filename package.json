{
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "next start",
    "test": "jest  --env=jsdom",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "prettier": "eslint ./ --fix",
    "eslint": "eslint ./",
    "stylelint": "stylelint ./**/*.js",
    "prestylecheck": "run-s prettier",
    "stylecheck": "run-p stylelint eslint"
  },
  "dependencies": {
    "express": "^4.15.3",
    "next": "beta",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "semantic-ui-react": "^0.70.0",
    "styled-components": "2.0.0"
  },
  "devDependencies": {
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-styled-components": "^1.1.6",
    "cross-env": "^5.0.1",
    "enzyme": "^2.9.1",
    "eslint": "^4.1.1",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-react-app": "^1.0.2",
    "husky": "^0.14.1",
    "jest": "^20.0.4",
    "jest-enzyme": "^3.4.0",
    "jest-styled-components": "^3.1.5",
    "lint-staged": "^4.0.0",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.5.2",
    "prop-types": "^15.5.10",
    "react-addons-test-utils": "^15.6.0",
    "react-test-renderer": "^15.6.1",
    "rimraf": "^2.6.1",
    "stylelint": "^7.12.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-processor-styled-components": "^0.1.2"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./setupTests.js",
    "collectCoverageFrom": [
      "./**/*.{js,jsx}",
      "!./**/*/index.{js,jsx}",
      "!./.next"
    ]
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": "stylelint-config-standard",
    "syntax": "scss",
    "rules": {
      "block-opening-brace-space-after": "never-single-line",
      "block-closing-brace-space-before": "never-single-line"
    }
  },
  "lint-staged": {
    "*": [
      "prettier"
    ]
  }
}
